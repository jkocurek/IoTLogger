<!DOCTYPE html>
<head>
  <title>Room Status</title>
  <script src="https://js.pusher.com/4.1/pusher.min.js"></script>
  <script>

    // Enable pusher logging - don't include this in production
    Pusher.logToConsole = true;

    var pusher = new Pusher('a643ec07311ea7899ff7', {
      cluster: 'us2',
      encrypted: true
    });

    var channel = pusher.subscribe('my-channel');
    channel.bind('my-event', function(data) {
      alert(data.message);
    });
  </script>
</head>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Temp</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_status.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.temp %></td>
        <td><%= status.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

